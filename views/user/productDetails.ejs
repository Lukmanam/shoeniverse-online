		        // Stop acting like a button
		        e.preventDefault();
		        // Get the field name
		        var quantity = parseInt($('#quantity').val());
		        
		        // If is not undefined
		            
		            $('#quantity').val(quantity + 1);

		          
		            // Increment
		        
		    });

		     $('.quantity-left-minus').click(function(e){
		        // Stop acting like a button
		        e.preventDefault();
		        // Get the field name
		        var quantity = parseInt($('#quantity').val());
		        
		        // If is not undefined
		      
		            // Increment
		            if(quantity>0){
		            $('#quantity').val(quantity - 1);
		            }
		    });
		    
		});
	</script>
<script>	
function addToCart(id) {
	console.log("hi");
	
		$.ajax({
			
			url: '/addToCart',
			method: 'post',
			data: {
				query: id
			},
			
			success: (response) => {
				if (response.success) {
					toastr.success("Product added to Cart","",{
						timeOut: 1500,
						progressBar: true
					});
				} else if (response.check) {
					toastr.error("Out of Stock!!","",{
						timeOut: 1500,
						progressBar: true
					});
				}
			}
		})
	}
</script>
    
